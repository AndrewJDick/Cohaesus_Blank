{
  "linting": "change",
  "paths": {
    "html": {
      "src": "./src/*.html",
      "dest": "./build"
    },
    "js": {
      "src": "./src/js/app.jsx",
      "dest": "./build/js",
      "all": "./src/js/**/*.{js,jsx}"
    },
    "styles": {
      "src": "./src/sass/**/*.scss",
      "dest": "./build/css"
    }
  } 
}